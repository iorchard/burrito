kind: StorageCluster
apiVersion: core.libopenstorage.org/v1
metadata:
  name: px-cluster
  namespace: {{ purestorage_namespace }}
  annotations:
    portworx.io/portworx-proxy: "false"
    portworx.io/pvc-controller: "false"
    portworx.io/pvc-controller-port: "10261"
    portworx.io/pvc-controller-secure-port: "10262"
    portworx.io/disable-storage-class: "true"
spec:
  image: {{ docker_image_repo }}/portworx/oci-monitor:{{ portworx_oci_monitor_version }}
  {% if offline %}
  customImageRegistry: {{ containerd_insecure_registries.seed_registry }}
  {% end %}
  imagePullPolicy: Always
  updateStrategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
  deleteStrategy:
    type: UninstallAndWipe
  placement:
    nodeAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
        nodeSelectorTerms:
        - matchExpressions:
          - key: px/enabled
            operator: NotIn
            values:
            - "false"
          - key: kubernetes.io/hostname
            operator: Exists
  network:
    dataInterface: {{ storage_iface_name }}
    mgmtInterface: {{ mgmt_iface_name }}
  kvdb:
    internal: true
  storage:
    useAll: true
  secretsProvider: k8s
  stork:
    enabled: false
  autopilot:
    enabled: false
  runtimeOptions:
    default-io-profile: "6"
  csi:
    enabled: true
  monitoring:
    telemetry:
      enabled: false
  nodes:
  - selector:
      labelSelector:
        matchLabels:
          portworx.io/node-type: "storage"
    storage:
      useAll: true
  - selector:
      labelSelector:
        matchLabels:
          portworx.io/node-type: "storageless"
    storage:
      devices: []
  env:
  - name: PURE_FLASHARRAY_SAN_TYPE
    value: "FC" # or "ISCSI"
  - name: "ENABLE_ASG_STORAGE_PARTITIONING"
    value: "true"
