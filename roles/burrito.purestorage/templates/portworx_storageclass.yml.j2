kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: purestorage
  annotations:
    storageclass.kubernetes.io/is-default-class: "{{ 'true' if storage_backends[
0] == 'purestorage' else 'false' }}"
provisioner: pxd.portworx.com
parameters:
  backend: "pure_block"
  csi.storage.k8s.io/fstype: xfs
allowVolumeExpansion: true
