---
images:
  tags:
    mariadb: {{ docker_image_repo }}/jijisa/mariadb:10.11.13-ubuntu_jammy
    ingress: {{ kube_image_repo }}/ingress-nginx/controller:v1.12.1
    error_pages: {{ kube_image_repo }}/defaultbackend:1.4
    dep_check: {{ quay_image_repo }}/airshipit/kubernetes-entrypoint:latest-ubuntu_jammy
    ks_user: {{ docker_image_repo }}/jijisa/heat:2023.1-ubuntu_jammy

pod:
  replicas:
    server: {{ pod.quorum_replicas }}
    ingress: {{ pod.replicas }}
  security_context:
    server:
      container:
        perms:
          readOnlyRootFilesystem: false
        mariadb:
          runAsUser: 0
          allowPrivilegeEscalation: true
          readOnlyRootFilesystem: false
volume:
  enabled: true
  class_name: {{ storageclass_name }}
  size: {{ mariadb.volume_size }}
  log:
    class_name: {{ storageclass_name }}
    size: 5Gi
endpoints:
  oslo_db:
    host_fqdn_override:
      default:
        tls:
          secretName: mariadb-tls-direct
          duration: {{ tls.duration }}
          renewBefore: {{ tls.renewBefore }}
          issuerRef:
            name: ca-issuer
            kind: ClusterIssuer
    auth:
      admin:
        username: root
        password: {{ mariadb.admin_password }}
monitoring:
  prometheus:
    enabled: false
    mysqld_exporter:
      scrape: false
conf:
  db_acl:
    enabled: true
    cidr: {{ kube_pods_subnet }}
manifests:
  certificates: true
...
