#jinja2: lstrip_blocks: "True"
listen kube-apiserver
    bind {{ keepalived_vip }}:{{ kube_apiserver_port }}
    mode tcp
    option tcplog
    option log-health-checks
    timeout client 3h
    timeout server 3h
    balance {{ balance }}
    {% for h in groups['kube_control_plane'] %}
    server {{ h }} {{ hostvars[h]['ansible_' + mgmt_iface_name].ipv4.address }}:{{ kube_apiserver_port }} check check-ssl verify none inter {{ inter }} rise {{ rise }} fall {{ fall }} on-marked-down shutdown-sessions
    {% endfor %}
